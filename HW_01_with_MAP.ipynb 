    "def map_k(recommended_list, bought_list, k=5):\n",
    "    \n",
    "    # сделать дома\n",
    "    \n",
    "    k_list = [k] * len(recommended_list)\n",
    "    ap_k_list = np.array(list(map(ap_k, recommended_list, bought_list, k_list)))\n",
    "    \n",
    "    return ap_k_list.mean()"
   ]
